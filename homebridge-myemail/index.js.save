"use strict";
var request = require("request");


var Service, Characteristic, HomebridgeAPI;

var PythonShell = require('python-shell');

module.exports = function(homebridge) {
  Service = homebridge.hap.Service;
  Characteristic = homebridge.hap.Characteristic;
  HomebridgeAPI = homebridge;
  homebridge.registerAccessory("homebridge-myemail", "MyEmail", MyEmail);
}

function MyEmail(log, config) {
  this.log = log;
  this.name = config.name;

  this._service = new Service.Switch(this.name);
  this._service.getCharacteristic(Characteristic.On).on('set', this._setOn.bind(this));


MyLED.prototype.getServices = function() {
  return [this._service];
}

MyLED.prototype._setOn = function(on, callback) {
  this.log("Setting switch to " + on);

	request({
 	 uri: "http:/"+"/www.marc-julian.de/mailer.aspx?betreff=" + on + "&kommentar=Homebridgevon=homebridge%40marc.de",
 	 method: "GET"
	});

  callback();
}
